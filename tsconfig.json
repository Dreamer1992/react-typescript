{
  "compilerOptions": {
    "target": "es6",
    "module": "es6",
    "strict": true,
    "noEmit": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "sourceMap": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "plugins": [{ "name": "typescript-plugin-css-modules" }]
  },
  "include": ["./src/**/*"],
  "exclude": ["./node_modules"]
}
